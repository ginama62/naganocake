<h5>会員情報編集</h5>
</br>
<%= form_with model: @customer, url: public_customers_information_path, method: :patch do |f| %>

        <div class="row">
          <div class="col-3">
            <%= f.label  "名前" %>
          </div>

          <div class="col-3">
            <%= f.text_field :last_name,  autocomplete: "last_name",placeholder: "" %>
          </div>

          <div class="col-3">
            <%= f.text_field :first_name,  autocomplete: "first_name",placeholder: "" %>
          </div>
        </div>
        <div class="row">
          <div class="col-3">
            <%= f.label  "フリガナ" %>
          </div>

          <div class="col-3">
            <%= f.text_field :last_name_kana,  autocomplete: "last_name_kana",placeholder: "" %>
          </div>

          <div class="col-3">
            <%= f.text_field :first_name_kana,  autocomplete: "last_name_kana",placeholder: "" %>
          </div>
        </div>
        
        <div class="row">
          <div class="col-3">
            <%= f.label :email, "メールアドレス" %>
          </div>
          <div class="col-1"></div>
          <div class="col-4">
            <%= f.email_field :email, autocomplete: "email",placeholder: "sample@example.com" %>
          </div>
        </div>
        
        <div class="row">
          <div class="col-3">
            <%= f.label :post_code, "郵便番号" %>
          </div>
          <div class="col-1"></div>
          <div class="col-4">
            <%= f.text_field :post_code, autocomplete: "post_code",placeholder: "0000000" %>
          </div>
        </div>
        
        <div class="row">
          <div class="col-3">
            <%= f.label :address, "住所" %>
          </div>
          <div class="col-1"></div>
          <div class="col-8">
            <%= f.text_field :address, autocomplete: "address",placeholder: "", class:"col-10" %>
          </div>
        </div>
        
        <div class="row">
          <div class="col-3">
            <%= f.label :phone_number, "電話番号" %>
          </div>
          <div class="col-1"></div>
          <div class="col-4">
            <%= f.text_field :phone_number, autocomplete: "phone_number",placeholder: "00000000000" %>
          </div>
        </div>
        <div class="row justify-content-around">
          <div class="text-center mt-3 col-3">
            <%= f.submit "編集内容を保存", class: "btn btn-success" %>
          </div>
          <div class="col-3 mt-3">
            <%= link_to "退会する", public_customers_unsubscribe_path, class:"btn btn-danger" %>
          </div>
        </div>

      <% end %>
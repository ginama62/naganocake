<div class="container">
  <h4>注文情報確認</h4>
  <div class="row">
    <div class="col-7">
      <table class="table table-bordered">
        <thead>
          <tr class="table-active">
            <td>商品名</td>
            <td>単価(税込)</td>
            <td>数量</td>
            <td>小計</td>
          </tr>
        </thead>
        <tbody>
          <% @total = 0 %>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <th><%= cart_item.item.name %>
            </th>
            <td><%= cart_item.item.with_tax_price %></td>
            <td><%= cart_item.amount %></td>
            <td><%= cart_item.subtotal.to_s(:delimited) %></td>
          </tr>
        </tbody>
          <% @total +=  cart_item.subtotal %>
          <% end %>
      </table>
    </div>

    <div class="col-4">
      <table class="table table-bordered">
        <tr>
          <td class="table-active">送料</td>
          <td><%= @order.shipping_cost = 800 %></td>
        </tr>
        <tr>
          <td class="table-active">商品合計</td>
           <td><%= @total.to_s(:delimited) %></td>
         </tr>
         <tr>
          <td class="table-active">請求金額</td>
          <% @order.total_payment = @order.shipping_cost + @total %>
          <td><%= @order.total_payment.to_s(:delimited) %></td>
        </tr>
      </table>
    </div>

    <div class="col-7 text-left">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th>お支払い方法</th>
            <td><%= @order.payment_method_i18n %></td>
          </tr>
          <tr>
            <th>お届け先</th>
            <td>
              〒<%= @order.postal_code %>
                <%= @order.address %><br>
                <%= @order.name %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div><br>
  <div class="col-10 text-center">
    <%= form_with model: @order, url: public_orders_path, method: :post, local: true do |f| %>
      <%= f.hidden_field :customer_id %>
      <%= f.hidden_field :shipping_cost %>
      <%= f.hidden_field :total_payment %>
      <%= f.hidden_field :payment_method %>
      <%= f.hidden_field :name %>
      <%= f.hidden_field :address %>
      <%= f.hidden_field :postal_code %>
      <%= f.submit "注文を確定する", class: "btn btn-success" %>
    <% end %>
  </div>
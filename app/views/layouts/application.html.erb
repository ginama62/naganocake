<!DOCTYPE html>
<html>
  <head>
    <title>Naganocake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
      <a class="navbar-brand" href="/"><span>ロゴ</span></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
            <% if admin_signed_in? %>
          <li>
            <%= link_to admin_root_path, class: 'nav-link text-light' do %>
              <i class="fas fa-home"></i> 商品一覧
            <% end %>
          </li>
          <li>
            <%= link_to admin_root_path, class: 'nav-link text-light' do %>
              <i class="fas fa-users"></i> 会員一覧
            <% end %>
          </li>
          <li>
            <%= link_to admin_root_path, class: 'nav-link text-light' do %>
              <i class="fas fa-book-open"></i> 注文履歴一覧
            <% end %>
          </li>
          　<%= link_to admin_genres_path, class: 'nav-link text-light' do %>
              <i class="fas fa-book-open"></i> ジャンル一覧
            <% end %>
          </li>
          <li>
            <%= link_to admin_root_path, class: 'nav-link text-light' do%>
              <i class="fas fa-sign-out-alt"></i> ログアウト
            <% end %>
          </li>

          <% else %>

          <li>
            <%= link_to admin_root_path, class: 'nav-link text-light' do %>
              <i class="fas fa-home"></i> About
            <% end %>
          </li>
          <li>
            <%= link_to admin_root_path, class: 'nav-link text-light' do %>
              <i class="fas fa-link"></i> 商品一覧
            <% end %>
          </li>
          <li>
            <%= link_to admin_root_path, class: 'nav-link text-light' do %>
              <i class="fas fa-user-plus"></i> 新規登録
            <% end %>
          </li>
          <li>
            <%= link_to admin_root_path, class: 'nav-link text-light' do %>
              <i class="fas fa-sign-in-alt"></i> ログイン
            <% end %>
          </li>

          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>
    <%= yield %>
  </body>
</html>

<div class= "col-8">
<h5>商品一覧（全<%= @items.count %>件）</h5>

<div class= "row">
<% @items.each do |item| %>
<div class= "col-3">

<%= link_to public_item_path(item.id) do %>
<% if item.image.attached? %>
  <%= image_tag item.image, size: "100x100" %>
<% else %>
  <%= image_tag 'default_image.jpeg', size: "150x150" %>
<% end %>
<% end %></br>
<%= item.name %>
</br>
¥<%= item.with_tax_price.to_s(:delimited) %>円
</div>
<% end %>
</div>
</div>
</div>
</div>
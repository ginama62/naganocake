<div class="container">
  <div class="row">
    <div class="col">
      <h5>配送先編集</h5>
    </div>
  </div>
    <div class="row">
      <div class="col-3">
        <%= form_with model: @address, url: public_address_path(@address.id), method: :patch do |f| %>
        <%= f.label :"郵便番号(ハイフンなし)" %>
      </div>
        <%= f.text_field :postal_code, autofocus: true, id:"inputpostal_code", placeholder:""%>
    </div>
    
    <div class="row">
      <div class="col-3">
        <%= f.label :"住所" %>
      </div>
        <%= f.text_field :address, autofocus: true, id:"inputaddress", placeholder:""%>
    </div>
    
    <div class="row">
      <div class="col-3">
        <%= f.label :"宛名" %>
      </div>
        <%= f.text_field :name, autofocus: true, id:"inputname", placeholder:""%>
    </div>
    
    <!--<div class="row">-->
      <div class="col">
        <%= f.submit "変更内容を保存", class: "btn btn-success" %>
        <% end %>
      </div>
    <!--</div>-->
</div>

<div class="container">
  <h4>新規会員登録</h4>
  <div class="row">
    <div class="col-9">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
      <table class="table table-borderless table-sm">
        <tbody>
          <tr>
            <td><%= f.label :名前 %></td>
            <td><%= f.text_field :last_name, autofocus: true, placeholder:"姓" %></td>
            <td><%= f.text_field :first_name, autofocus: true, placeholder:"名" %></td>
          </tr>
          <tr>
            <td><%= f.label :フリガナ %></td>
            <td><%= f.text_field :last_name_kana, autofocus: true, placeholder:"セイ" %></td>
            <td><%= f.text_field :first_name_kana, autofocus: true, placeholder:"メイ" %></td>
          </tr>
          <tr>
            <td><%= f.label :メールアドレス %></td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>
          <tr>
            <td><%= f.label :"郵便番号(ハイフンなし)" %></td>
            <td><%= f.text_field :postal_code, autofocus: true %></td>
          </tr>
          <tr>
            <td><%= f.label :住所 %></td>
            <td><%= f.text_field :address, autofocus: true %></td>
          </tr>
          <tr>
            <td><%= f.label :"電話番号(ハイフンなし)" %></td>
            <td><%= f.text_field :telephone_number, autofocus: true %></td>
          </tr>
          <tr>
            <td><%= f.label :パスワード %>
                <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %>文字以上)</em>
                <% end %>
            </td>
            <td><%= f.password_field :password, autocomplete: "new-password" %></td>
          </tr>
          <tr>
            <td><%= f.label :"パスワード(確認用)" %></td>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
      <div class="row text-center offset-3">
        <div class="col-3">
          <%= f.submit "新規登録", class: "btn btn-success btn-block" %>
        </div>
      </div>
      <% end %>
      <br>
      <div class="col">
        <h4>既に登録済みの方</h4>
        <u><%= link_to "こちら", new_customer_session_path %></u> からログインして下さい。
      </div>
</div>
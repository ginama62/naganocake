<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-8">
      <h4>注文履歴一覧</h4>
      <table class="table table-sm">
        <thead class="thead-light">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td><u><%= link_to order.created_at.strftime('%Y/%m/%d'), admin_order_path(order), style: "color: black;" %></u></td>
            <td><%= order.customer.last_name + " " + order.customer.first_name %></td>
            <td><%= order.order_details.sum(:amount) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @orders %>
    </div>
  </div>
</div>
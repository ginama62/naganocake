<div class="container">
  <div class="row">
    <div class="col">
      <h5>配送先登録／一覧</h5>
    </div>
  </div>
  
  <div class="row">
    <div class="col-3">
      <%= form_with model: @address, url: public_addresses_path, method: :post do |f| %>
        <%= f.label :"郵便番号(ハイフンなし)" %>
    </div>  
        <%= f.text_field :postal_code, autofocus: true, id:"inputpostal_code", placeholder:""%>
  </div>
<!--<%= f.text_field :postal_code %>-->

    <div class="row">
      <div class="col-3">
        <%= f.label :"住所" %>
      </div>
        <%= f.text_field :address, autofocus: true, id:"inputaddress", placeholder:""%>
    </div>
<!--<label>住所</label>-->
<!--<%= f.text_field :address %></br>-->

    <div class="row">
      <div class="col-3">
        <%= f.label :"宛名" %>
      </div>
        <%= f.text_field :name, autofocus: true, id:"inputname", placeholder:""%>
    </div>
<!--<label>宛名</label>-->
<!--<%= f.text_field :name %>-->

      <div class="col">
        <%= f.submit "新規登録", class: "btn btn-success" %>
        <% end %>
      </div>
</br>

    <div class= "col-md-8 offset-md-1">
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>郵便番号</th>
              <th>住所</th>
              <th>宛名</th>
              <th></th>
              <th colspan="4"></th>
            </tr>
          </thread>
          <tbody>
              <% @addresses.each do |address| %>
              <tr>
              <td>
                <%= address.postal_code %>
              </td>
              <td>
                <%= address.address %>
              </td>
              <td>
                <%= address.name %>
              </td>
              <td>
                <%= link_to "編集する", edit_public_address_path(address.id), class: "btn btn-success" %>
                <%= link_to "削除する", public_address_path(address.id), method: :delete, class: "btn btn-danger", "data-confirm" => "本当に削除しますか？" %>
              </td>
              </tr>
              <% end %>
          </tbody>
        </table>